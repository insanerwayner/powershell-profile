$Scripts = Get-ChildItem \\ccmhmr.local\netlogon\ *.bat

foreach ( $Script in $Scripts )
    {
    
    $OldContent = $Script | Get-Content
    $NewContent = $OldContent.replace("net time \\misfs2 /SET /YES", "net time \\dc02 /SET /YES")
    $Script
    #$NewContent
    $NewContent | Set-Content $Script
    Get-Content $Script
    }
